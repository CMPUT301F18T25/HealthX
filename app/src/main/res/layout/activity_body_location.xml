<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/bg_view"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context=".ActivityAddPhoto">

    <ImageView
        android:id="@+id/body_image_front"
        android:src="@drawable/mappedhuman"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/body_image_back"
        android:src="@drawable/mappedhuman"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/body_image_textview_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/body_image_front"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25sp"
        android:textSize="32sp"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/body_image_textview_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_image_back"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25sp"
        android:textSize="32sp"
        android:paddingBottom="10dp"/>
    <Button
        android:id="@+id/saveBodyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:onClick="saveBodyLocations"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_below="@id/body_image_textview_front"/>


</RelativeLayout>